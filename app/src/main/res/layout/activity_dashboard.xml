<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8F0FF"
    tools:context=".ui.admin.DashBoard">

    <LinearLayout
        android:background="#6874E8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#6874E8"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:fontFamily="@font/bungee_regular"
                android:layout_gravity="left"
                android:textColor="#fff"
                android:text="Bienvenido" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="47dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="120dp"
                android:background="@drawable/logout"
                android:fontFamily="@font/bungee_regular"
                android:text=""
                android:textColor="#fff"
                android:textSize="25dp" />


        </LinearLayout>
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#392759">

                    <Button
                        android:id="@+id/btnMarcas"
                        android:layout_width="278dp"
                        android:layout_height="147dp"
                        android:layout_alignParentBottom="true"
                        android:background="#00000000"
                        android:fontFamily="@font/bungee_regular"
                        android:text="Marcas"
                        android:textColor="#fff"
                        android:textSize="25dp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/marca"
                    app:srcCompat="@drawable/marca"
                    tools:srcCompat="@drawable/marca" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="#F76D00">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/auto"
                    app:srcCompat="@drawable/auto" />

                <Button
                    android:id="@+id/btnAuto"
                    android:layout_width="248dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:fontFamily="@font/bungee_regular"
                    android:text="Automoviles"
                    android:textColor="#fff"
                    android:textSize="24dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#ECE5F0">]

                    <Button
                        android:id="@+id/btnColor"
                        android:layout_width="220dp"
                        android:layout_height="147dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="-1dp"
                        android:background="#00000000"
                        android:fontFamily="@font/bungee_regular"
                        android:text="Color"
                        android:textColor="@color/black"
                        android:textSize="25dp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="900dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="-40dp"
                    android:src="@drawable/edit"
                    app:srcCompat="@drawable/edit" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="10dp"
                android:background="#4ECDC4">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/car"
                    app:srcCompat="@drawable/car" />

                <Button
                    android:id="@+id/btnTipo"
                    android:layout_width="250dp"
                    android:layout_height="135dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="#00000000"
                    android:fontFamily="@font/bungee_regular"
                    android:text="Tipo Automovil"
                    android:textColor="#000"
                    android:textSize="25dp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_marginBottom="15dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:background="#0375DA">

                    <Button

                        android:id="@+id/btnUsuario"
                        android:layout_width="269dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentBottom="true"
                        android:background="#00000000"
                        android:fontFamily="@font/bungee_regular"
                        android:text="Usuarios"
                        android:textColor="#fff"
                        android:textSize="25dp" />

                </RelativeLayout>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:src="@drawable/profile"
                    app:srcCompat="@drawable/profile" />
            </RelativeLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>